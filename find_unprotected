_fail='\033[31m' # red
_rset='\033[0m'  # reset colour

find_unprotected() {
	printf "${_fail}===> Unprotected home directories:${_rset}\n"
	printf "${_fail}---> group screwable:${_rset}\n"
	ls -lA /home/ | grep -e '^drwxr' -e '^drwx.w'
	printf "${_fail}---> globally screwable:${_rset}\n"
	ls -lA /home/ | grep -e '^drwx...r' -e '^drwx....w'
}

if [ "$(dnsdomainname)" = "physik.fu-berlin.de" ] ; then
	find_unprotected
fi
